<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bpm</artifactId>
		<groupId>com.bonitasoft.engine</groupId>
		<version>6.3.1-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-global-javadoc</artifactId>

	<name>Bonita Global Javadoc</name>

	<dependencies>
		<dependency>
			<groupId>org.bonitasoft.engine.api</groupId>
			<artifactId>bonita-common-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.util</groupId>
			<artifactId>bonita-client-util</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.api</groupId>
			<artifactId>bonita-common-api-sp</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.util</groupId>
			<artifactId>bonita-client-util-sp</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>javadoc-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<doctitle>Bonita BPM Engine ${project.version} API</doctitle>
							<windowtitle>Bonita BPM Engine ${project.version} API</windowtitle>
							<finalName>Bonita-BPM-Engine-${project.version}</finalName>
        					<stylesheetfile>stylesheet.css</stylesheetfile>
							<includeDependencySources>true</includeDependencySources>
							<!-- Can't get this exclude below to work: -->
<!--         					<dependencySourceExcludes> -->
<!--         						<dependencySourceExclude>com.bonitasoft.engine.bpm.breakpoint.*:*</dependencySourceExclude> -->
<!--         					</dependencySourceExcludes> -->
<!-- 							<excludePackageNames>com.bonitasoft.engine.bpm.breakpoint.*</excludePackageNames> -->
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>javadoc</id>
			<properties>
				<maven.javadoc.skip>false</maven.javadoc.skip>
			</properties>
		</profile>
	</profiles>
</project>

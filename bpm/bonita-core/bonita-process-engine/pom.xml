<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bonita-core</artifactId>
		<groupId>com.bonitasoft.engine.core</groupId>
		<version>6.3.2</version>
	</parent>

	<artifactId>bonita-process-engine</artifactId>

	<name>Bonita Process Engine</name>

	<properties>
		<bonita.home>${project.build.directory}/home</bonita.home>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.bonitasoft.manager</groupId>
			<artifactId>manager</artifactId>
		</dependency>

		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bonita-common-sp</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.parameter</groupId>
			<artifactId>bonita-parameter-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.process.instance</groupId>
			<artifactId>bonita-process-instance-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.reporting</groupId>
			<artifactId>bonita-reporting-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.monitoring</groupId>
			<artifactId>bonita-monitoring-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.core</groupId>
			<artifactId>bonita-process-engine</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.page</groupId>
			<artifactId>bonita-page-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.data</groupId>
			<artifactId>bonita-business-data-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.platform</groupId>
			<artifactId>bonita-platform-model-impl</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.expression</groupId>
			<artifactId>bonita-expression-model-impl</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.core.operation</groupId>
			<artifactId>bonita-operation-model-impl</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.core.process.definition</groupId>
			<artifactId>bonita-process-definition-model-impl</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.process.instance</groupId>
			<artifactId>bonita-process-instance-impl</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>install license</id>
						<phase>process-test-resources</phase>
						<configuration>
							<target>
								<copy todir="${bonita.home}/server/licenses" failonerror="true">
									<fileset dir="${user.home}/lic" includes="*.lic" />
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-antrun-plugin</artifactId>
										<versionRange>[1.7,)</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>

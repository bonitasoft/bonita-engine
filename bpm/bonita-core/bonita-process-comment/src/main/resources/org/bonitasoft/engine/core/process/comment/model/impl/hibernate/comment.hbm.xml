<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false" default-access="field"
	package="org.bonitasoft.engine.core.process.comment.model.impl">

	<filter-def name="tenantFilter" condition=":tenantId = tenantid">
		<filter-param name="tenantId" type="long" />
	</filter-def>

	<class name="SCommentImpl" abstract="true" table="process_comment">
		<composite-id class="org.bonitasoft.engine.persistence.PersistentObjectId" mapped="true">
			<key-property name="tenantId" column="tenantid" type="long" />
			<key-property name="id" column="id" type="long" />
		</composite-id>
		<discriminator column="kind" type="string" />
		<property name="userId" column="userId" />
		<property name="processInstanceId" column="processInstanceId" />
		<property name="postDate" column="postDate" />
		<property name="content" column="content" />
		<filter name="tenantFilter" />
	</class>
	
	<subclass name="SHumanCommentImpl" discriminator-value="human" extends="SCommentImpl" />
	<subclass name="SSystemCommentImpl" discriminator-value="system" extends="SCommentImpl" />
</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>bpm</artifactId>
        <groupId>org.bonitasoft.engine</groupId>
        <version>7.7.0-SNAPSHOT</version>
    </parent>

    <artifactId>bonita-common</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>2.9.0</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>net.javacrumbs.json-unit</groupId>
            <artifactId>json-unit-fluent</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>xmlunit</groupId>
            <artifactId>xmlunit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>form-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java/org/bonitasoft/engine/bpm/bar/form/model</source>
                                <source>src/main/java/org/bonitasoft/engine/form</source>
                                <!--<include>org/bonitasoft/engine/bpm/bar/actorMapping/*.java</include>-->
                            </sources>
                            <outputDirectory>${project.build.directory}/form-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bdm-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java/org/bonitasoft/engine/bdm/model</source>
                            </sources>
                            <outputDirectory>${project.build.directory}/bdm-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>application-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java/org/bonitasoft/engine/business/application/xml</source>
                            </sources>
                            <schemaSourceExcludeFilters>
                                <filter implementation="org.codehaus.mojo.jaxb2.shared.filters.pattern.PatternFileFilter">
                                    <patterns>
                                        <pattern>ApplicationNodeBuilder\.java</pattern>
                                    </patterns>
                                </filter>
                            </schemaSourceExcludeFilters>
                            <outputDirectory>${project.build.directory}/application-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>profiles-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java/org/bonitasoft/engine/profile/xml</source>
                            </sources>
                            <outputDirectory>${project.build.directory}/profiles-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>process-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java/org/bonitasoft/engine/operation/impl/OperationImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/operation/impl/LeftOperandImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/expression/impl/ExpressionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/userfilter/impl/UserFilterDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/internal/NamedDefinitionElementImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/internal/BaseDefinitionElementImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/impl/InputDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/impl/InputContainerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/impl/ConstraintDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/impl/ContractDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/parameter/impl/ParameterDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/document/impl/DocumentDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/document/impl/DocumentListDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/connector/impl/ConnectorDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/StandardLoopCharacteristicsImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/FlowNodeDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/MessageEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/ReceiveTaskDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/SendTaskDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/ErrorEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/ActivityDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/CatchEventDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/NameExpressionMap.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/NameExpressionPair.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/HumanTaskDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/CatchMessageEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/ThrowEventDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/FlowElementContainerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/UserTaskDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/TaskDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/TransitionDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/EndEventDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/EventDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/GatewayDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/MultiInstanceLoopCharacteristicsImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/TimerEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/CallActivityDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/SignalEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/CorrelationDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/impl/internal/ThrowMessageEventTriggerDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/data/impl/TextDataDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/data/impl/DataDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/data/impl/XMLDataDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/process/impl/internal/ProcessDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/process/impl/internal/SubProcessDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/process/impl/internal/DesignProcessDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/process/impl/internal/IndexLabel.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/actor/impl/ActorDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/businessdata/impl/BusinessDataDefinitionImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/context/ContextEntryImpl.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/connector/ConnectorEvent.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/GatewayType.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/CallableElementType.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/flownode/TimerType.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/Type.java</source>
                                <source>src/main/java/org/bonitasoft/engine/bpm/contract/InputDefinition.java</source>
                            </sources>
                            <outputDirectory>${project.build.directory}/process-schemas</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <target>
                                <copy file="${project.build.directory}/form-schemas/schema1.xsd"
                                      toFile="${project.build.outputDirectory}/form-mapping.xsd"/>
                                <copy file="${project.build.directory}/bdm-schemas/schema1.xsd"
                                      toFile="${project.build.outputDirectory}/bom.xsd" />
                                <copy file="${project.build.directory}/application-schemas/schema1.xsd"
                                      toFile="${project.build.outputDirectory}/application.xsd" />
                                <copy file="${project.build.directory}/profiles-schemas/schema1.xsd"
                                      toFile="${project.build.outputDirectory}/profiles.xsd" />
                                <move file="${project.build.directory}/process-schemas/schema1.xsd"
                                      toFile="${project.build.outputDirectory}/ProcessDefinition.xsd"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <profile>
            <id>javadoc</id>
            <properties>
                <maven.javadoc.skip>false</maven.javadoc.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javadoc-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <doctitle>Bonita Engine ${project.version} common API</doctitle>
                                    <windowtitle>Bonita Engine ${project.version} common API</windowtitle>
                                    <includeDependencySources>true</includeDependencySources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>

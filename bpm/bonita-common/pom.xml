    <build>
       <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>${project.build.directory}/schemas</directory>
                <excludes>
                    <exclude>**/*.class</exclude>
                </excludes>
            </resource>
        </resources>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>form-mapping-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <includes>
                                <include>org/bonitasoft/engine/bpm/bar/form/model/*.java</include>
                                <include>org/bonitasoft/engine/form/*.java</include>
                                <!--<include>org/bonitasoft/engine/bpm/bar/actorMapping/*.java</include>-->
                            </includes>
                            <outputDirectory>${project.build.directory}/form-mapping-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bdm-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <includes>
                                <include>org/bonitasoft/engine/bdm/model/**/*.java</include>
                            </includes>
                            <outputDirectory>${project.build.directory}/bdm-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>application-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <includes>
                                <include>org/bonitasoft/engine/business/application/xml/**/*.java</include>
                            </includes>
                            <excludes>
                                <exclude>org/bonitasoft/engine/business/application/xml/ApplicationNodeBuilder.java
                                </exclude>
                            </excludes>
                            <outputDirectory>${project.build.directory}/application-schemas</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>profiles-schemagen</id>
                        <goals>
                            <goal>schemagen</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <includes>
                                <include>org/bonitasoft/engine/profile/xml/**/*.java</include>
                            </includes>
                            <outputDirectory>${project.build.directory}/profiles-schemas</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                       <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>process-sources</phase>
                        <configuration>
                            <target>
                                <move file="${project.build.directory}/form-mapping-schemas/schema1.xsd"
                                      toFile="${project.build.directory}/schemas/form-mapping.xsd" />
                                <copy file="${project.build.directory}/bdm-schemas/schema1.xsd"
                                      toFile="${project.build.directory}/schemas/bom.xsd" />
                                <copy file="${project.build.directory}/application-schemas/schema1.xsd"
                                      toFile="${project.build.directory}/schemas/application.xsd" />
                                <copy file="${project.build.directory}/profiles-schemas/schema1.xsd"
                                      toFile="${project.build.directory}/schemas/profiles.xsd" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.assertj</groupId>
                <artifactId>assertj-assertions-generator-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>javadoc</id>
            <properties>
                <maven.javadoc.skip>false</maven.javadoc.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javadoc-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <doctitle>Bonita Engine ${project.version} common API</doctitle>
                                    <windowtitle>Bonita Engine ${project.version} common API</windowtitle>
                                    <!--includeDependencySources>true</includeDependencySources-->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>


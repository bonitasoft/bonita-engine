<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.3.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="local-server.properties" />
    </bean>

    <bean id="bonitaDataSource" class="org.apache.commons.dbcp2.managed.BasicManagedDataSource">
        <property name="driverClassName" value="${${sysprop.bonita.db.vendor}.db.driver.class}" />
        <property name="initialSize" value="${local.journal.xads.minPoolSize}" />
        <property name="maxTotal" value="${local.journal.xads.maxPoolSize}" />
        <property name="url" value="${${sysprop.bonita.db.vendor}.db.url}" />
        <property name="username" value="${${sysprop.bonita.db.vendor}.db.user}" />
        <property name="password" value="${${sysprop.bonita.db.vendor}.db.password}" />
        <property name="transactionManager" ref="arjunaTransactionManager" />
    </bean>

    <bean id="bonitaSequenceManagerDataSource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg name="configuration">
            <bean class="com.zaxxer.hikari.HikariConfig">
                <property name="driverClassName" value="${${sysprop.bonita.db.vendor}.db.driver.class}" />
                <property name="jdbcUrl" value="${${sysprop.bonita.db.vendor}.db.url}" />
                <property name="username" value="${${sysprop.bonita.db.vendor}.db.user}" />
                <property name="password" value="${${sysprop.bonita.db.vendor}.db.password}" />
                <property name="maxLifetime" value="2000000" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="businessDataDataSource" class="org.apache.commons.dbcp2.managed.BasicManagedDataSource">
        <property name="driverClassName" value="${${sysprop.bonita.db.vendor}.db.driver.class}" />
        <property name="initialSize" value="${local.bdm.xads.minPoolSize}" />
        <property name="maxTotal" value="${local.bdm.xads.maxPoolSize}" />
        <property name="url" value="${${sysprop.bonita.db.vendor}.db.url}" />
        <property name="username" value="${${sysprop.bonita.db.vendor}.db.user}" />
        <property name="password" value="${${sysprop.bonita.db.vendor}.db.password}" />
        <property name="transactionManager" ref="arjunaTransactionManager" />
    </bean>

    <bean id="notManagedBizDataSource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg name="configuration">
            <bean class="com.zaxxer.hikari.HikariConfig">
                <property name="driverClassName" value="${${sysprop.bonita.db.vendor}.db.driver.class}" />
                <property name="jdbcUrl" value="${${sysprop.bonita.db.vendor}.db.url}" />
                <property name="username" value="${${sysprop.bonita.db.vendor}.db.user}" />
                <property name="password" value="${${sysprop.bonita.db.vendor}.db.password}" />
                <property name="maxLifetime" value="2000000" />
            </bean>
        </constructor-arg>
    </bean>

    <!-- create Arjuna transaction manager -->
    <bean id="arjunaTransactionManager" class="com.arjuna.ats.jta.TransactionManager" factory-method="transactionManager" />

    <bean id="userTransaction" class="com.arjuna.ats.jta.UserTransaction" factory-method="userTransaction" />

    <!-- Set up the mapping jndiName -> Datasource -->
    <util:map id="jndiMapping">
        <entry key="${local.journal.xads.uniqueName}" value-ref="bonitaDataSource" />
        <entry key="java:comp/env/bonitaSequenceManagerDS" value-ref="bonitaSequenceManagerDataSource" />
        <entry key="${local.bdm.xads.uniqueName}" value-ref="businessDataDataSource" />
        <entry key="java:comp/env/NotManagedBizDataDS" value-ref="notManagedBizDataSource" />
        <entry key="${transactionManager.jndi.name}" value-ref="arjunaTransactionManager" />
        <entry key="${userTransaction.jndi.name}" value-ref="userTransaction" />
    </util:map>

    <!-- This is the base class that will allow to lookup the JNDI tree -->
    <bean id="jndiTemplate" class="org.springframework.jndi.JndiTemplate" />

    <!-- Bind the mapping -->
    <bean id="jndiSetup" lazy-init="false" class="org.bonitasoft.engine.MemoryJNDISetup" init-method="init" destroy-method="clean">
        <constructor-arg name="jndiTemplate" ref="jndiTemplate" />
        <constructor-arg name="jndiMapping" ref="jndiMapping" />
    </bean>

</beans>

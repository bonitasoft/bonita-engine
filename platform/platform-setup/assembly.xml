<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>Platform setup packaging</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>src/main/standalone</directory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
            <fileMode>740</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>src/main/standalone</directory>
            <fileMode>0640</fileMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
            <directoryMode>640</directoryMode>
            <fileMode>640</fileMode>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>true</unpack>
            <directoryMode>0750</directoryMode>
            <fileMode>0640</fileMode>
            <unpackOptions>
                <excludes>
                    <!-- h2.properties use for distrib is not the same -->
                    <exclude>h2.properties</exclude>
                    <!-- sql are packaged at an upper level -->
                    <exclude>sql/</exclude>
                    <exclude>META-INF/</exclude>
                </excludes>
            </unpackOptions>
            <scope>test</scope>
            <outputDirectory>platform_conf/initial</outputDirectory>
            <includes>
                <include>org.bonitasoft.platform:platform-resources</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <directoryMode>0750</directoryMode>
            <fileMode>0640</fileMode>
            <unpackOptions>
                <includes>
                    <include>sql/**</include>
                </includes>
            </unpackOptions>
            <scope>test</scope>
            <outputDirectory>platform_conf</outputDirectory>
            <includes>
                <include>org.bonitasoft.platform:platform-resources</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
